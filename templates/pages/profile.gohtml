<!DOCTYPE html>
<html lang="en">

<head>
  {{template "header.gohtml" .Cfg}}
  <title>HS Auth - Profile</title>
  <script src="static/js/profile.js"></script>
</head>

<body>
  <div class="wrapper">
    <div class="main-panel">
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6 col-lg-6">
              <div class="card">
                <div class="card-header card-header-tabs card-header-primary">
                  <h4 class="card-title">Personal Information</h4>
                </div>
                <div class="card-body text-center">
                  <h2>{{ .Data.User.Name }}</h2>
                  <h3 id="emailText">{{ .Data.User.Email }}</h3>
                </div>
                {{if .Data.Team}}
                <div class="card-body">
                  <div class="form-group">
                    <label for="teamName">Team Name </label>
                    {{if ne .Data.Team.Creator.Hex .Data.User.ID.Hex}}
                    <input type="text" class="form-control" id="teamName" placeholder="Hackathon Team" value="{{.Data.Team.Name}}" disabled>
                    {{else}}
                    <input type="text" class="form-control" id="teamName" placeholder="Hackathon Team" value="{{.Data.Team.Name}}">
                    <button class="btn btn-success" onclick="updateName($('#teamName').val())">Save</button>
                    {{end}}
                  </div>
                </div>
                {{end}}
              </div>

            </div>
            {{ if .Data.Team}}
            <div class="col-md-6 col-lg-6">
              <div class="card">
                <div class="card-header card-header-tabs card-header-primary">
                  <h4 class="card-title">Team Information</h4>
                </div>
                <div class="card-body">
                    <h2 class="text-center text">Team name: {{.Data.Team.Name}}</h2>
                    <h3 class="text-center text">Team code: {{.Data.Team.ID.Hex}}</h3>
                  <div class="form-group">
                    <div id="teamMemberList">
                      <h3>Teammates:</h3>
                      {{range .Data.Teammates}}
                        <p>{{.Name}}</p>
                      {{end}}
                    </div>
                    <button class="btn btn-danger" onclick="leaveTeam()">Leave Team</button>
                  </div>
                </div>
              </div>
            </div>
            {{else}}
            <div class="col-md-6 col-lg-6">
              <div class="card">
                <div class="card-header card-header-tabs card-header-primary">
                  <h4 class="card-title">Team Information</h4>
                </div>
                <div class="card-body text-center">
                  <h2>Create or join a team!</h2>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <button class="btn btn-warning" onclick="createTeam()">Create a team</button>
                  </div>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label for="teamCodeInput">Team name or code</label>
                    <input type="text" class="form-control" id="teamCodeInput" placeholder="aWeRsOmEtEaM">
                    <button class="btn btn-success" onclick="joinTeam($('#teamCodeInput').val())">Join team</button>
                  </div>
                </div>
              </div>
            </div>
            {{end}}
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
{{if .Err}}
{{template "errorNotifier.gohtml" .Err}}
{{end}}
{{template "cookieDisclaimer.gohtml"}}
</html>
